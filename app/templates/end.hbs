<ul class="list-group">
  {{#each model as |assault|}}
    <li class="list-group-item {{if assault.result 'list-group-item-success' 'list-group-item-danger'}}">
      {{#if assault.result}}

        <span class="badge alert-success"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></span>
        {{assault.question}} |
        <span class="label label-success">{{assault.userAnswer}}</span>

      {{else}}

        <span class="badge alert-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></span>
        {{assault.question}} |
        <span class="label label-danger">{{assault.userAnswer}}</span>
        | <span class="label label-danger">{{assault.answer}}</span>

      {{/if}}
    </li>
  {{/each}}
</ul>