{{#if isSuperGood}}
  <div class="alert alert-success" role="alert"><strong>{{message}}</strong> All answers right.</div>
{{/if}}

{{#if isGood}}
  <div class="alert alert-info" role="alert"><strong>{{message}}</strong> {{conquestArchive.rightAnswers}} of {{conquestArchive.totalAssaults}}.</div>
{{/if}}

{{#if isFine}}
  <div class="alert alert-warning" role="alert"><strong>{{message}}</strong> {{conquestArchive.rightAnswers}} of {{conquestArchive.totalAssaults}}.</div>
{{/if}}

{{#if isBad}}
  <div class="alert alert-danger" role="alert"><strong>{{message}}</strong> {{conquestArchive.rightAnswers}} of {{conquestArchive.totalAssaults}}.</div>
{{/if}}

{{#if isHorrible}}
  <div class="alert alert-danger" role="alert"><strong>{{message}}</strong> {{conquestArchive.rightAnswers}} of {{conquestArchive.totalAssaults}}.</div>
{{/if}}
